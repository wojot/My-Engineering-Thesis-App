{% extends 'base.html.twig' %}

{% block title %}
    {{ page.title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/custom.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>{{ page.title }}</h1>
            <p>{{ page.content|raw }}</p>
        </div>
    </div>
{% endblock %}