<div class="row">
    <div class="col-md-5 col-md-offset-3">

        <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}

            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
                <div class="col-sm-10">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"
                           placeholder="Nick" required="required"/>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" placeholder="Hasło" name="_password"
                           required="required"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me"
                                   value="on"/> {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" id="_submit" name="_submit" class="btn btn-block btn-primary"
                           value="{{ 'security.login.submit'|trans }}"/>
                </div>
            </div>
        </form>

        <h5 class="text-center">Zalogowanie oznacza akceptację regulaminu. Nie masz konta? <a
                    href="{{ path('fos_user_registration_register') }}">Zarejestruj się!</a></h5>


    </div>
</div>

